
@using DataAccess.Model
@model List<Lepenka>


@{
    ViewBag.Title = "Lepenky";
}

<h2 style="margin-top:0;">Dostupné lepenky</h2>
<br />
<div style="overflow-x:auto">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Název</th>
                <th>Gramáž</th>
                <th>Rozměr</th>
                <th>Kvalita</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Lepenka l in Model)
            {
                <tr>
                    <td>@l.Id</td>
                    <td>@l.Nazev</td>
                    <td>@l.Gramaz</td>
                    <td>@l.Rozmer</td>
                    <td>@l.Kvalita.Kvalita</td>
                </tr>
            }
        </tbody>
    </table>
</div>