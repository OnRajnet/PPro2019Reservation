
@using System.Activities.Statements
@using DataAccess.Model
@model IList<Objednavka>


@{
    ViewBag.Title = "Index";
}

<h2>Moje objednávky</h2>

<div class="clearfix"></div>


<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Označení</th>
            <th>Množství</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Objednavka o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.Oznaceni</td>
            <td>@o.Mnozstvi</td>
            <td>@o.Cena</td>
        </tr>
    
    }
    </tbody>
</table>

@if (ViewBag.Pages != null)
{

    <ul class="pagination">

        @for (int i = 1; i <= ViewBag.Pages; i++)
        {

            <li class="@(ViewBag.CurrentPage == i ? "active" : "")"><a href="@Url.Action("Index", "Objednavka", new { page = i })">@i</a></li>

        }
    </ul>
}