
@using DataAccess.Model
@model IList<Kartonaz>


@{
    ViewBag.Title = "Kartonáž";
}

    <div class="jumbotron">
        <h2>Dostupná kartonáž</h2>

        <div class="well">
            @using (Html.BeginForm("Search", "Kartonaz"))
            {
                <input type="text" class="form-control" placeholder="Vyhledat kartonaz (rozměr)" name="phrase" />
                <input type="submit" value="Hledat" class="btn btn-default" />
            }
        </div>


        <a href="@Url.Action("Create","Kartonaz")" class="btn btn-default pull-right">Vytvoření kartonáže</a>
        <div class="clearfix"></div>

        <br />

        <div style="overflow-x:auto">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Název</th>
                        <th>Rozměr</th>
                        <th>Pocet</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Kartonaz k in Model)
                    {
                        <tr>
                            <td>@k.Id</td>
                            <td>@k.Oznaceni</td>
                            <td>@k.Rozmer</td>
                            <td>@k.Pocet</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Kartonaz", new { id = k.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Kartonaz", new { id = k.Id }, new { onclick = "return confirm('Přejete si opravdu smazat položku " + k.Id + " " + k.Oznaceni + " " + k.Rozmer + "');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>