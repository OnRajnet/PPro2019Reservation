@model DataAccess.Model.Kartonaz

@{
    ViewBag.Title = "Přidat kartonáž";
}

    <div class="jumbotron">
        <h2>Nová kartonáž</h2>

        @Html.ValidationSummary()

        @using (Html.BeginForm("Add", "Kartonaz", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label">Název</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Oznaceni, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Oznaceni)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Rozměr</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Rozmer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Rozmer)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Pocet kusů</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Pocet, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Pocet)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Vytvořit položku</button>
                </div>
            </div>
        }
    </div>

<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({ selector: '.formatedtext' });</script>

