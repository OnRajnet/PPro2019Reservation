
@using DataAccess.Model
@model IList<Kartonaz>


@{
    ViewBag.Title = "Index";
}

<h2>Přehled dostupných lepenek</h2>

<div class="clearfix"></div>

<div class="panel">
    <div class="panel-body">
        @using (Html.BeginForm("Search", "Kartonaz"))
        {
            <input type="text" class="form-control" placeholder="Vyhledat kartonaz" name="phrase" />
            <input type="submit" value="Hledat" class="btn btn-default" />
        }


    </div>
</div>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Název</th>
            <th>Rozměr</th>
            <th>Počet kusů</th>
            <th>Rezervace</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Kartonaz k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Oznaceni</td>
                <td>@k.Rozmer</td>
                <td>@k.Pocet</td>
                <td>@Html.CheckBox("chbxIsSelected", k.IsSelected)</td>
            </tr>
        }
    </tbody>
</table>

<div class="panel">
    <div class="panel-body">
        <button type="submit" class="btn btn-default">Rezervovat</button>
    </div>
</div>

@if (ViewBag.Pages != null)
{

    <ul class="pagination">

        @for (int i = 1; i <= ViewBag.Pages; i++)
        {

            <li class="@(ViewBag.CurrentPage == i ? "active" : "")"><a href="@Url.Action("Index", "Kartonaz", new { page = i })">@i</a></li>

        }
    </ul>
}