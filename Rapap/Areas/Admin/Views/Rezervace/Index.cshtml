
@using DataAccess.Model
@model IList<Rezervace>


@{
    ViewBag.Title = "Rezervace";
}

    <div class="jumbotron">
        <h2>Objednávky</h2>
        <div style="overflow-x:auto">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Uživatel</th>
                        <th>Zboží</th>
                        <th>Datum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Rezervace r in Model)
                    {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.User</td>
                        @if (r.Lepenka == null && r.Kartonaz != null)
                        {
                            <td>@r.Kartonaz</td>
                        }
                        else
                        {
                            <td>@r.Lepenka</td>
                        }
                        <td>@r.Datum</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div> 
    </div>